{
  "name": "piikki",
  "version": "0.8.0",
  "description": "Advance payment system for small organizations",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon --inspect -r dotenv/config -r ts-node/register src/index.ts",
    "lint": "tslint -p tsconfig.json src/**/*.ts",
    "lint:fix": "tslint --fix -p tsconfig.json src/**/*.ts",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "init-db": "npm run migrate && npm run seed",
    "build": "tsc --listEmittedFiles",
    "build:watch": "tsc --watch",
    "build:test": "tsc --noEmit",
    "mocha": "mocha --exit test/**/*_spec.ts",
    "mocha:watch": "mocha --inspect -w --watch-extensions ts test/**/*_spec.ts",
    "test": "npm run lint && npm run build:test && npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/majori/piikki.git"
  },
  "engines": {
    "node": "10"
  },
  "author": "Antti Kivim√§ki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/majori/piikki/issues"
  },
  "homepage": "https://github.com/majori/piikki#readme",
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.25",
    "@types/body-parser": "0.0.33",
    "@types/boom": "^7.2.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "0.0.31",
    "@types/chai-http": "0.0.30",
    "@types/chai-subset": "^1.3.1",
    "@types/cors": "^2.8.4",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^4.0.8",
    "@types/joi": "^13.6.3",
    "@types/knex": "^0.14.26",
    "@types/lodash": "^4.14.119",
    "@types/method-override": "0.0.29",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.10.2",
    "@types/swagger-jsdoc": "0.0.2",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "chai-subset": "^1.6.0",
    "dotenv": "^5.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "tslint": "^5.12.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "boom": "^7.3.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "fs-extra": "^4.0.3",
    "joi": "^13.7.0",
    "knex": "^0.14.6",
    "lodash": "^4.17.11",
    "method-override": "^2.3.10",
    "moment": "^2.23.0",
    "pg": "^7.7.1",
    "swagger-jsdoc": "^1.10.3",
    "swagger-ui-express": "^3.0.10",
    "ts-node": "^5.0.1",
    "typescript": "^2.9.2",
    "winston": "^2.4.4"
  }
}
