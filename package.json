    "@types/boom": "^7.3.0",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "0.0.31",
    "@types/chai-http": "0.0.30",
    "@types/chai-subset": "^1.3.3",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^4.0.11",
    "@types/joi": "^13.6.3",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.158",
    "@types/method-override": "0.0.29",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.10.11",
    "@types/swagger-jsdoc": "0.0.2",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
