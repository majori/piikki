  "description": "Advance payment system for small organizations",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon --inspect -r dotenv/config -r ts-node/register src/index.ts",
    "lint": "tslint -p tsconfig.json src/**/*.ts",
    "lint:fix": "tslint --fix -p tsconfig.json src/**/*.ts",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "init-db": "npm run migrate && npm run seed",
    "build": "tsc --listEmittedFiles",
    "build:watch": "tsc --watch",
    "test": "npm run lint && mocha test/**/*_spec.ts"
  },
