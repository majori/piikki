{
  "name": "piikki",
  "version": "0.9.0",
  "description": "Advance payment system for small organizations",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon --inspect -r dotenv/config -r ts-node/register src/index.ts",
    "lint": "prettier --check ./src ./test",
    "lint:fix": "prettier --write ./src ./test",
    "migrate": "knex --cwd build migrate:latest",
    "seed": "knex seed:run",
    "init-db": "knex --cwd src migrate:latest && npm run seed",
    "build": "tsc --listEmittedFiles",
    "build:watch": "tsc --watch",
    "build:test": "tsc --noEmit",
    "mocha": "mocha",
    "mocha:watch": "mocha --inspect -w",
    "test": "npm run lint && npm run build:test && npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/majori/piikki.git"
  },
  "author": "Antti Kivim√§ki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/majori/piikki/issues"
  },
  "homepage": "https://github.com/majori/piikki#readme",
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.32",
